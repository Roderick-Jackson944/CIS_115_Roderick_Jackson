def count_word_frequency_dict(text):
    word_counts = {}
    words = text.lower().split()  # Convert to lowercase and split into words
    for word in words:
        # Remove punctuation if desired (example: removing commas and periods)
        word = word.replace(",", "").replace(".", "")
        word_counts[word] = word_counts.get(word, 0) + 1
    return word_counts

sentence = "The quick brown fox jumps over the lazy dog. The dog is very lazy."
frequency_map = count_word_frequency_dict(sentence)
print(frequency_map)